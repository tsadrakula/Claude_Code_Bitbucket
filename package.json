{
  "name": "claude-bitbucket-pipe",
  "version": "1.0.0",
  "description": "Bitbucket Pipe for Claude Code - AI-powered code assistance",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "setup": "bun run src/setup/install-bitbucket-app.ts",
    "install-bitbucket-app": "bun run src/setup/install-bitbucket-app.ts",
    "prepare:pipeline": "bun run src/entrypoints/prepare.ts",
    "collect-inputs": "bun run src/entrypoints/collect-inputs.ts",
    "format-turns": "bun run src/entrypoints/format-turns.ts",
    "update-comment": "bun run src/entrypoints/update-comment.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "bitbucket": "^2.12.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "execa": "^9.4.0",
    "minimatch": "^10.0.1",
    "simple-git": "^3.27.0",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.10",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "bun-types": "^1.1.29",
    "eslint": "^9.10.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "engines": {
    "bun": ">=1.2.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-bitbucket-pipe"
  },
  "keywords": [
    "bitbucket",
    "pipe",
    "claude",
    "ai",
    "code-review",
    "automation"
  ],
  "license": "MIT"
}